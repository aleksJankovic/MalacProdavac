<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/component_item_category"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingRight="10dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_seller"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:src="@drawable/image_blank"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/seller_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Prodavac: Bogdan Boca "
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/profile_seller"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ordered_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:text="18/10/2023"
        android:textColor="@color/grey"
        app:layout_constraintStart_toEndOf="@+id/profile_seller"
        app:layout_constraintTop_toBottomOf="@+id/seller_username" />

    <TextView
        android:id="@+id/total_price_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:text="Cena porudÅ¾bine: "
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/profile_seller"
        app:layout_constraintTop_toBottomOf="@+id/ordered_date" />

    <TextView
        android:id="@+id/total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="1800 rsd."
        android:fontFamily="@font/inter_medium"
        android:textColor="@color/orange"
        app:layout_constraintStart_toEndOf="@+id/total_price_title"
        app:layout_constraintTop_toBottomOf="@+id/ordered_date" />

    <TextView
        android:visibility="gone"
        android:id="@+id/total_price_title_delivering"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:text="Zarada: "
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/profile_seller"
        app:layout_constraintTop_toBottomOf="@+id/total_price" />

    <TextView
        android:visibility="gone"
        android:id="@+id/total_price_delivering"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="1800 rsd."
        android:fontFamily="@font/inter_medium"
        android:textColor="@color/orange"
        app:layout_constraintStart_toEndOf="@+id/total_price_title_delivering"
        app:layout_constraintTop_toBottomOf="@+id/total_price" />

    <ImageView
        android:id="@+id/status_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/naruceno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/arrow_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>