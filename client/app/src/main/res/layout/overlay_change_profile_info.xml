<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/overlay_container"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@drawable/white_button"
    android:padding="10dp">

    <ScrollView
        android:id="@+id/edit_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView31"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/balsamiq_sans"
                    android:text="Izmenite personalne informacije"
                    android:textColor="@color/black"
                    android:textSize="23dp"
                    android:maxLines="2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/close"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:padding="5dp"
                        android:src="@drawable/exit_x"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_semibold"
                android:text="Unesite ime:"
                android:textColor="@color/grey"
                android:textSize="12dp"
                tools:ignore="TextSizeCheck" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/input"
                android:elevation="4dp"
                android:ems="10"
                android:hint="Ime"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="16dp"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/error_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_semibold"
                android:text="*Morate uneti ime"
                android:textColor="@color/red"
                android:textSize="12dp"
                android:visibility="invisible"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_semibold"
                android:text="Unesite prezime:"
                android:textColor="@color/grey"
                android:textSize="12dp"
                tools:ignore="TextSizeCheck" />

            <EditText
                android:id="@+id/lastname"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/input"
                android:elevation="4dp"
                android:ems="10"
                android:hint="Prezime"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="16dp"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/error_lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_semibold"
                android:text="*Morate uneti prezime"
                android:textColor="@color/red"
                android:textSize="12dp"
                android:visibility="invisible"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_semibold"
                android:text="Unesite korisničko ime:"
                android:textColor="@color/grey"
                android:textSize="12dp"
                tools:ignore="TextSizeCheck" />

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/input"
                android:elevation="4dp"
                android:ems="10"
                android:hint="Korisničko ime"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="16dp"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/error_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_semibold"
                android:text="*Morate uneti korisničko ime"
                android:textColor="@color/red"
                android:textSize="12dp"
                android:visibility="invisible"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_semibold"
                android:text="Unesite email:"
                android:textColor="@color/grey"
                android:textSize="12dp"
                tools:ignore="TextSizeCheck" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/input"
                android:elevation="4dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="16dp"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/error_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_semibold"
                android:text="*Morate uneti validnu email adresu"
                android:textColor="@color/red"
                android:textSize="12dp"
                android:visibility="invisible"
                tools:ignore="TextSizeCheck" />


            <TextView
                android:id="@+id/stara_lozinka"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_semibold"
                android:text="Unesite trenutnu lozinku:"
                android:textColor="@color/grey"
                android:textSize="12dp"
                tools:ignore="TextSizeCheck" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/input"
                android:elevation="4dp"
                android:ems="10"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="10dp">

                <EditText
                    android:id="@+id/password_old"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:background="@android:color/transparent"
                    android:elevation="4dp"
                    android:ems="10"
                    android:hint="Lozinka"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="TouchTargetSizeCheck" />

                <ImageView
                    android:id="@+id/eye_password_old"
                    android:layout_width="43dp"
                    android:layout_height="26dp"
                    android:layout_weight="1"
                    android:onClick="showPassword"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/icons8_not_visible_96___"
                    tools:ignore="MissingConstraints,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/error_password_old"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_semibold"
                android:text="*Lozinka nije ispravna"
                android:textColor="@color/red"
                android:textSize="12dp"
                android:visibility="invisible"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_semibold"
                android:text="Unesite lozinku:"
                android:textColor="@color/grey"
                android:textSize="12dp"
                tools:ignore="TextSizeCheck" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/input"
                android:elevation="4dp"
                android:ems="10"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="10dp">

                <ImageView
                    android:id="@+id/eye_password"
                    android:layout_width="43dp"
                    android:layout_height="26dp"
                    android:layout_weight="1"
                    android:onClick="showPassword"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/icons8_not_visible_96___"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:background="@android:color/transparent"
                    android:elevation="4dp"
                    android:ems="10"
                    android:hint="Lozinka"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.545"
                    tools:ignore="TouchTargetSizeCheck" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/error_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_semibold"
                android:text="*Lozinka mora sadržati velika, mala slova i brojeve"
                android:textColor="@color/red"
                android:textSize="12dp"
                android:visibility="invisible"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_semibold"
                android:text="Potvrdite lozinku:"
                android:textColor="@color/grey"
                android:textSize="12dp"
                tools:ignore="TextSizeCheck" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/input"
                android:elevation="4dp"
                android:ems="10"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="10dp">

                <EditText
                    android:id="@+id/password_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:background="@android:color/transparent"
                    android:elevation="4dp"
                    android:ems="10"
                    android:hint="Lozinka"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="TouchTargetSizeCheck" />

                <ImageView
                    android:id="@+id/eye_password_confirm"
                    android:layout_width="43dp"
                    android:layout_height="26dp"
                    android:layout_weight="1"
                    android:onClick="showPassword"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/icons8_not_visible_96___"
                    tools:ignore="MissingConstraints,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/error_password_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_semibold"
                android:text="*Lozinke se moraju poklapati"
                android:textColor="@color/red"
                android:textSize="12dp"
                android:visibility="invisible"
                tools:ignore="TextSizeCheck" />

            <Button
                android:id="@+id/nastavi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@drawable/full_fill_button_disabled"
                android:elevation="4dp"
                android:enabled="false"
                android:fontFamily="@font/inter"
                android:onClick="goToStep_2"
                android:paddingLeft="54dp"
                android:paddingTop="12dp"
                android:paddingRight="54dp"
                android:paddingBottom="12dp"
                android:text="Potvrdi"
                android:textAllCaps="false"
                android:textSize="18dp"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>