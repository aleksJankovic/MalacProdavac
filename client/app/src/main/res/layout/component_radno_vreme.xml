<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="200dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/pon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/inter"
                android:text="\u00B7 Pondeljak"
                android:textColor="@color/grey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/pon_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/inter"
                android:text="10-17H"
                android:textAlignment="textEnd"
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:layout_marginRight="5dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/uto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/inter"
                android:text="\u00B7 Utorak"
                android:textColor="@color/grey"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/uto_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/inter"
                android:text="10-17H"
                android:textAlignment="textEnd"
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:layout_marginRight="5dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/inter"
                android:text="\u00B7 Sreda"
                android:textColor="@color/grey"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/sre_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/inter"
                android:text="10-17H"
                android:textAlignment="textEnd"
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:layout_marginRight="5dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/cet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="\u00B7 ÄŒetvrtak"
                android:textColor="@color/grey"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/cet_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/inter"
                android:text="10-17H"
                android:textAlignment="textEnd"
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:layout_marginRight="5dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/pet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="\u00B7 Petak"
                android:textColor="@color/grey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/pet_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/inter"
                android:text="10-17H"
                android:textAlignment="textEnd"
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:layout_marginRight="5dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="\u00B7 Subota"
                android:textColor="@color/grey"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/sub_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/inter"
                android:text="10-17H"
                android:textAlignment="textEnd"
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:layout_marginRight="5dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/ned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="\u00B7 Nedelja"
                android:textColor="@color/grey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/ned_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/inter"
                android:text="10-17H"
                android:textAlignment="textEnd"
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:layout_marginRight="5dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/pon_ned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="\u00B7 Pon-Ned"
                android:textColor="@color/grey"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/pon_ned_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/inter"
                android:text="10-17H"
                android:textAlignment="textEnd"
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:layout_marginRight="5dp"/>

        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>