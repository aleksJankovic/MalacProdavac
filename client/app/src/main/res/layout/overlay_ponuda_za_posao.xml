<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:padding="20dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/naslov"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/balsamiq_sans"
            android:text="Porudžbina #675"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/balsamiq_sans"
            android:text="Daj ponudu:"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/order_id"
            tools:ignore="TextSizeCheck" />


        <ImageView
            android:padding="5dp"
            android:id="@+id/close"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/exit_x"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cena"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/naslov"
        tools:layout_editor_absoluteX="20dp">

        <TextView
            android:id="@+id/textView32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cena dostave proizvoda:"
            android:textColor="@color/grey"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints,TextSizeCheck" />

        <EditText
            android:id="@+id/input_cena"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/empty_button_grey"
            android:gravity="center"
            android:hint="0"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView32"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="din"
            android:textColor="@color/grey"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/input_cena"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TextSizeCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cena_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cena"
        tools:layout_editor_absoluteX="20dp">

        <TextView
            android:id="@+id/error_cena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upozorenje"
            android:visibility="gone"
            android:textColor="@color/red"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/datum"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cena_error"
        tools:layout_editor_absoluteX="20dp">

        <TextView
            android:id="@+id/textView36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datum isporuke:"
            android:textColor="@color/grey"
            android:textSize="15dp"
            app:layout_constraintBottom_toTopOf="@+id/tvSelectedDate"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints,TextSizeCheck" />

        <Button
            android:id="@+id/input_datum"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/component_item_category"
            android:drawablePadding="100dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="Izaberite datum"
            android:textAllCaps="false"
            android:textColor="@color/grey"
            app:layout_constraintStart_toEndOf="@+id/textView36"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/tvSelectedDate"
            android:layout_width="0dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_datum"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:text=""
            android:textColor="@color/grey"
            android:textAlignment="textStart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_datum" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/datum_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/datum"
        tools:layout_editor_absoluteX="20dp">

        <TextView
            android:id="@+id/error_datum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upozorenje"
            android:visibility="gone"
            android:textColor="@color/red"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/datum_error"
        tools:layout_editor_absoluteX="20dp">

        <TextView
            android:id="@+id/textView35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Komentar:"
            android:textColor="@color/grey"
            android:textSize="15dp"
            tools:ignore="MissingConstraints,TextSizeCheck" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/empty_button_grey"
            android:gravity="top|start"
            android:minLines="5"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            app:layout_constraintTop_toBottomOf="@+id/textView35"
            tools:ignore="SpeakableTextPresentCheck"
            tools:layout_editor_absoluteX="24dp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Error message"
            android:textSize="15dp"
            android:textColor="@color/red"
            android:maxLines="2"
            app:layout_constraintTop_toBottomOf="@+id/editText"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <Button
        android:id="@+id/send_offer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/full_fill_button_disabled"
        android:enabled="false"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="10dp"
        android:text="Pošalji ponudu"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout25" />

</androidx.constraintlayout.widget.ConstraintLayout>