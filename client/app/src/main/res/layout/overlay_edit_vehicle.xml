<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/naslov"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Izaberite vozilo/a za dostavu"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:fontFamily="@font/balsamiq_sans"/>

        <ImageView
            android:id="@+id/close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:src="@drawable/exit_x"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        
        
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/naslov">

        <HorizontalScrollView
            android:id="@+id/klizac"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:id="@+id/vozilaDostavljac"
                android:layout_width="match_parent"
                android:layout_height="107dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                tools:ignore="MissingConstraints">

                <FrameLayout
                    android:id="@+id/auto"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_background"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:focusable="true"
                    android:minHeight="90dp"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="7dp"
                        android:src="@drawable/auto" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:fontFamily="@font/inter_medium"
                        android:text="Automobil"
                        android:textColor="@color/black"
                        android:textSize="9sp" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/motocikl"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/border_background"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:focusable="true"
                    android:minHeight="90dp"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="7dp"
                        android:src="@drawable/motocikl" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:fontFamily="@font/inter_medium"
                        android:text="Motocikl"
                        android:textColor="@color/black"
                        android:textSize="9dp" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/kombi"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/border_background"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:focusable="true"
                    android:minHeight="90dp"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="7dp"
                        android:src="@drawable/kombi" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:fontFamily="@font/inter_medium"
                        android:text="Kombi"
                        android:textColor="@color/black"
                        android:textSize="9dp" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/kamion"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/border_background"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:focusable="true"
                    android:minHeight="90dp"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="7dp"
                        android:src="@drawable/kamion" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:fontFamily="@font/inter_medium"
                        android:text="Kamion"
                        android:textColor="@color/black"
                        android:textSize="9dp" />
                </FrameLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <Button
            android:id="@+id/gotovo"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/full_fill_button"
            android:fontFamily="@font/inter"
            android:padding="6dp"
            android:text="Gotovo"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/klizac" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>